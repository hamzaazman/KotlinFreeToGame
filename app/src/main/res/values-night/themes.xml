<resources>
    <!-- Base application theme. -->
    <style name="Theme.KotlinFreeToPlay" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/medium_dark</item>

        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_200</item>
        <item name="colorOnSecondary">@color/medium_dark</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/medium_dark</item>
        <!-- Customize your theme here. -->

        <item name="android:background">@color/medium_dark</item>
    </style>

    <style name="expandMoreDrawable">
        <item name="srcCompat">@drawable/expand_more_white</item>
    </style>

    <style name="ToolbarTheme" parent="@style/ThemeOverlay.AppCompat.ActionBar">
        <item name="colorControlNormal">@color/white</item>
    </style>

    <style name="CustomChip" parent="Widget.MaterialComponents.Chip.Filter">
        <item name="checkedIconTint">@color/white</item>
        <item name="android:textColor">@color/chip_unselect_state</item>
        <item name="chipBackgroundColor">@color/chip_select_state</item>
        <item name="chipStrokeColor">@color/light_gray</item>
        <item name="chipMinHeight">28dp</item>
        <item name="chipCornerRadius">6dp</item>
        <item name="chipMinTouchTargetSize">48dp</item>
        <item name="chipIconSize">24dp</item>
        <item name="android:textAppearance">?attr/textAppearanceBody2</item>
    </style>

    <style name="clearChip" parent="Widget.MaterialComponents.Chip.Choice">
        <item name="chipIcon">@drawable/baseline_filter_list</item>
        <item name="chipBackgroundColor">@color/white</item>
        <item name="android:textColor">@color/medium_dark</item>
        <item name="checkedIconTint">@color/medium_dark</item>
        <item name="chipMinHeight">28dp</item>
        <item name="chipCornerRadius">14dp</item>
        <item name="chipMinTouchTargetSize">48dp</item>
        <item name="chipIconSize">24dp</item>
        <item name="android:textAppearance">?attr/textAppearanceBody2</item>
    </style>

    <style name="progressBarMediumDark">
        <item name="colorAccent">@color/white</item>
    </style>
</resources>